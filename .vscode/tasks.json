{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "docker-options",
      "type": "promptString",
      "default": "--gpus=all",
      "description": "docker-options"
    },
    {
      "id": "docker-image",
      "type": "promptString",
      "default": "${env:CONTAINER_IMAGE}",
      "description": "docker-image"
    }
  ],
  "tasks": [
    {
      "label": "Run Python (venv)",
      "type": "shell",
      "command": "python ${file}",
      "group": "none",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": "$python"
    },
    {
      "label": "Run Python (docker)  ",
      "dependsOrder": "sequence",
      "dependsOn": ["Run Python (docker)", "Remove Python (docker)"],
      "type": "shell",
      "command": ":",
      "group": "none",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": "$python"
    },
    {
      "label": "Run Python (docker build)  ",
      "dependsOrder": "sequence",
      "dependsOn": ["Run Python (docker build)", "Remove Python (docker)"],
      "type": "shell",
      "command": ":",
      "group": "none",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": "$python"
    },
    {
      "label": "Run Python (docker build file)  ",
      "dependsOrder": "sequence",
      "dependsOn": ["Run Python (docker build file)", "Remove Python (docker)"],
      "type": "shell",
      "command": ":",
      "group": "none",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": "$python"
    },
    {
      "label": "Run Python (docker)",
      "type": "shell",
      "command": "docker stop 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-run' && docker rm 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-run' || true && docker run ${input:docker-options} ${env:DOCKER_OPTIONS} -it --tty --name 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-run' --hostname 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-run' --publish-all --mount src='${env:LOCAL_WORKSPACE_FOLDER}',dst=${workspaceFolder},type=bind --entrypoint 'python3' ${input:docker-image} ${file}",
      "hide": true,
      "group": "none",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": "$python"
    },
    {
      "label": "Remove Python (docker)",
      "type": "shell",
      "command": "docker stop 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-run' && docker rm 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-run' || true",
      "hide": true,
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": "$python"
    },
    {
      "label": "Start Debugpy server (docker)",
      "dependsOn": ["Remove Debugpy server (docker)"],
      "type": "shell",
      "command": "docker run ${input:docker-options} ${env:DOCKER_OPTIONS} --detach --tty --network 'vsc-${workspaceFolderBasename}' --name 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-debug' --hostname 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-debug' --publish-all --mount type=bind,src=\"$(echo '${extensionInstallFolder:ms-python.debugpy}' | sed \"s|${userHome}|$(sed 's|\\\\|/|g' <<< '${env:LOCAL_USER_HOME}')|\")/bundled/libs/debugpy\",dst=/debugpy,readonly --mount src=\"${env:LOCAL_WORKSPACE_FOLDER}\",dst=${workspaceFolder},type=bind --entrypoint 'python3' ${input:docker-image} /debugpy --wait-for-client --listen 0.0.0.0:5678 ${file} && sleep 3s",
      "hide": true,
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": "$python"
    },
    {
      "label": "Remove Debugpy server (docker)",
      "type": "shell",
      "command": "docker stop 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-debug' && docker rm 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-debug' || true",
      "hide": true,
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": "$python"
    },
    {
      "label": "Run Python (docker build)",
      "type": "shell",
      "dependsOn": ["Build Python (docker build)"],
      "command": "docker stop 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-run' && docker rm 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-run' || true && docker run ${input:docker-options} ${env:DOCKER_OPTIONS} -it --tty --name 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-run' --hostname 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-run' --publish-all --mount src=\"${env:LOCAL_WORKSPACE_FOLDER}\",dst=${workspaceFolder},type=bind vsc-${workspaceFolderBasename} ${file}",
      "hide": true,
      "group": "none",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": "$python"
    },
    {
      "label": "Build Python (docker build)",
      "type": "shell",
      "command": "docker build ${workspaceFolder} --file ${workspaceFolder}/Dockerfile --tag vsc-${workspaceFolderBasename}",
      "hide": true,
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": "$python"
    },
    {
      "label": "Start Debugpy server (docker build)",
      "dependsOn": [
        "Remove Debugpy server (docker)",
        "Build Python (docker build)"
      ],
      "type": "shell",
      "command": "docker run ${input:docker-options} ${env:DOCKER_OPTIONS} --detach --tty --network 'vsc-${workspaceFolderBasename}' --name 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-debug' --hostname 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-debug' --publish-all --mount type=bind,src=\"$(echo '${extensionInstallFolder:ms-python.debugpy}' | sed \"s|${userHome}|$(sed 's|\\\\|/|g' <<< '${env:LOCAL_USER_HOME}')|\")/bundled/libs/debugpy\",dst=/debugpy,readonly --mount src=\"${env:LOCAL_WORKSPACE_FOLDER}\",dst=${workspaceFolder},type=bind vsc-${workspaceFolderBasename} /debugpy --wait-for-client --listen 0.0.0.0:5678 ${file} && sleep 3s",
      "hide": true,
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": "$python"
    },
    {
      "label": "Run Python (docker build file)",
      "type": "shell",
      "dependsOn": ["Build Python (docker build file)"],
      "command": "docker stop 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-run' && docker rm 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-run' || true && docker run ${input:docker-options} ${env:DOCKER_OPTIONS} -it --tty --name 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-run' --hostname 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-run' --publish-all --mount src=\"${env:LOCAL_WORKSPACE_FOLDER}\",dst=${workspaceFolder},type=bind vsc-${workspaceFolderBasename}-${fileBasenameNoExtension} ${file}",
      "hide": true,
      "group": "none",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": "$python"
    },
    {
      "label": "Build Python (docker build file)",
      "type": "shell",
      "command": "docker build ${workspaceFolder} --file ${fileDirname}/${fileBasenameNoExtension}.Dockerfile --tag vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}",
      "hide": true,
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": "$python"
    },
    {
      "label": "Start Debugpy server (docker build file)",
      "dependsOn": [
        "Remove Debugpy server (docker)",
        "Build Python (docker build file)"
      ],
      "type": "shell",
      "command": "docker run ${input:docker-options} ${env:DOCKER_OPTIONS} --detach --tty --network 'vsc-${workspaceFolderBasename}' --name 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-debug' --hostname 'vsc-${workspaceFolderBasename}-${fileBasenameNoExtension}-debug' --publish-all --mount type=bind,src=\"$(echo '${extensionInstallFolder:ms-python.debugpy}' | sed \"s|${userHome}|$(sed 's|\\\\|/|g' <<< '${env:LOCAL_USER_HOME}')|\")/bundled/libs/debugpy\",dst=/debugpy,readonly --mount src=\"${env:LOCAL_WORKSPACE_FOLDER}\",dst=${workspaceFolder},type=bind vsc-${workspaceFolderBasename}-${fileBasenameNoExtension} /debugpy --wait-for-client --listen 0.0.0.0:5678 ${file} && sleep 3s",
      "hide": true,
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": "$python"
    }
  ]
}
