{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Python (venv)",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Debug Python (docker)",
      "type": "debugpy",
      "request": "attach",
      "preLaunchTask": "Start Debugpy server (docker)",
      "postDebugTask": "Remove Debugpy server (docker)",
      "connect": {
        "host": "${workspaceFolderBasename}_debug_${fileBasenameNoExtension}",
        "port": 5678
      },
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Debug Python (docker build)",
